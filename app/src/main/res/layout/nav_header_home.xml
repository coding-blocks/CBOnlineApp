<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="@dimen/nav_header_height"
    android:id="@+id/navViewProfileRoot"
    android:clickable="true"
    android:onClick="openProfile"
    android:focusable="true"
    android:layout_width="match_parent"
    android:paddingTop="20dp"
    android:background="@drawable/toolbar_bg_dark"
    android:gravity="center_vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/navHeaderImageView"
        android:layout_width="55dp"
        app:civ_border_color="@color/white"
        app:civ_border_width="1dp"
        android:layout_height="55dp"
        android:layout_marginStart="@dimen/margin_large"
        android:src="@drawable/defaultavatar" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/navUsernameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_bold"
            android:text="@string/hello"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/navViewProfileTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/gilroy_medium"
            android:text="@string/view_profile"
            android:textColor="@color/orangish"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/ic_dropright_big"
        android:tint="@color/white" />


</LinearLayout>
