<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/margin_large"
    android:paddingEnd="@dimen/margin_large"
    tools:context="com.codingblocks.cbonlineapp.auth.onboarding.LoginHomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_user" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/mobileBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="@dimen/margin_medium"
            android:text="@string/continue_with_mobile_number" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:id="@+id/fbBtn"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_weight="1"
                android:backgroundTint="@color/fb"
                android:drawableStart="@drawable/ic_fb"
                android:padding="0dp"
                android:text="@string/facebook" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:id="@+id/gmailBtn"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_weight="1"
                android:backgroundTint="@color/gmail"
                android:drawableStart="@drawable/ic_gmail"
                android:text="@string/google" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="40dp"
            android:background="?attr/divider" />

        <TextView
            android:id="@+id/createAccTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:fontFamily="@font/gilroy_bold"
            android:textColor="@color/black"
            android:textColorLink="@color/orangish"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/policyTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/margin_xxl"
        android:fontFamily="@font/gilroy_bold"
        android:textColor="@color/brownish_grey" />
</FrameLayout>
