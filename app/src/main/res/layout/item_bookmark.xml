<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="@dimen/margin_large"
    android:paddingTop="@dimen/margin_large"
    android:paddingEnd="@dimen/margin_large"
    android:paddingBottom="@dimen/margin_large">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.codingblocks.cbonlineapp.util.widgets.GradientTextView
            android:id="@+id/bookmarkTitleTv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/gilroy_bold"
            android:textSize="16sp"
            tools:ignore="NestedWeights"
            tools:text="This is the title of the doubt " />

        <TextView
            android:id="@+id/bookmarkSubtitleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_extra_small"
            android:fontFamily="@font/gilroy_medium"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:text="Introduction to Python" />

    </LinearLayout>


    <TextView
        android:id="@+id/bookmarkTimeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/gilroy_medium"
        android:textColor="@color/brownish_grey"
        android:textSize="12sp"
        tools:text="4 hours ago" />

    <ImageView
        android:id="@+id/selectionImg"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:background="@drawable/ic_circle_pink"
        android:padding="6dp"
        android:src="@drawable/ic_selected" />
    <!--    <View-->
    <!--        android:id="@+id/divider3"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="1dp"-->
    <!--        android:layout_marginTop="@dimen/margin_small"-->
    <!--        android:background="?android:attr/listDivider" />-->


</LinearLayout>
