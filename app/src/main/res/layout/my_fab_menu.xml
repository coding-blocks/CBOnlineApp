<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fabMenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/doubtFabTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/doubtFab"
        android:layout_alignBottom="@+id/doubtFab"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="7dp"
        android:layout_toStartOf="@+id/doubtFab"
        android:clickable="true"
        android:focusable="true"
        android:textSize="16sp"
        android:fontFamily="@font/gilroy_medium"
        android:padding="8dp"
        android:text="Ask Doubt"
        android:textColor="@color/white"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/doubtFab"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_above="@+id/noteFab"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="@dimen/margin_medium"
        android:background="@drawable/button_background_outline"
        android:elevation="10dp"
        android:padding="14dp"
        android:src="@drawable/ic_doubt_gradient"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/noteFabTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/noteFab"
        android:layout_alignBottom="@+id/noteFab"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="7dp"
        android:layout_toStartOf="@+id/noteFab"
        android:fontFamily="@font/gilroy_medium"
        android:padding="8dp"
        android:textSize="16sp"
        android:text="Add Note"
        android:textColor="@color/white"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/noteFab"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_above="@id/videoFab"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="@dimen/margin_medium"
        android:background="@drawable/button_background_outline"
        android:clickable="true"
        android:elevation="10dp"
        android:focusable="true"
        android:padding="14dp"
        android:src="@drawable/ic_note_small"
        android:visibility="invisible" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/videoFab"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/margin_extra_large"
        android:layout_marginBottom="@dimen/margin_large"
        android:clickable="true"
        android:elevation="10dp"
        android:focusable="true"
        android:src="@drawable/ic_fab"
        android:visibility="visible" />


</RelativeLayout>
