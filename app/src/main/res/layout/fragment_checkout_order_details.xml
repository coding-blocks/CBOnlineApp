<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin_large"
    android:paddingEnd="@dimen/margin_large"
    tools:context="com.codingblocks.cbonlineapp.course.checkout.CheckoutOrderDetailsFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:fontFamily="@font/gilroy_bold"
        android:text="1. Verify Order Details"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_medium_small"
        android:background="@drawable/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/courseLogoImg"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginEnd="@dimen/margin_medium"
            android:src="@drawable/ic_course_logo" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/courseTitleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/gilroy_bold"
                android:textColor="@color/black"
                android:textSize="18sp"
                tools:text="Competitive Programming" />

            <TextView
                android:id="@+id/batchTileTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:fontFamily="@font/gilroy_medium"
                android:textColor="@color/brownish_grey"
                android:textSize="14sp"
                tools:text="Batch : January 2020" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:text="@string/rupee_sign"
                    android:id="@+id/priceTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_bold"
                    android:textColor="@color/orangish"
                    android:textSize="18sp"
                    tools:text="9499" />

                <TextView
                    android:id="@+id/mrpTv"
                    android:text="@string/rupee_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/gilroy_bold"
                    android:textColor="@color/brownish_grey"
                    tools:text="9499" />

                <TextView
                    android:id="@+id/checkoutTaxTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/gilroy_bold"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:text="+ 18% Tax" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_large"
        android:background="@drawable/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/gilroy_medium"
            android:text="Subtotal"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/subTotalTv"
            android:text="@string/rupee_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/gilroy_medium"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="9499 " />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/gilroy_medium"
            android:text="Total"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/totalTv"
            android:text="@string/rupee_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/gilroy_medium"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="9499 " />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/gilroy_medium"
            android:text="Taxes"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/taxesTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/rupee_sign"
            android:fontFamily="@font/gilroy_medium"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="499 " />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/gilroy_medium"
            android:text="Round Off"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/roundOffTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/gilroy_medium"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="0.00" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="@drawable/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingTop="@dimen/margin_large"
        android:paddingBottom="@dimen/margin_large">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_medium"
            android:text="Final Amount"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/finalPriceTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium_small"
            android:fontFamily="@font/gilroy_bold"
            android:textColor="@color/black"
            android:text="@string/rupee_sign"
            android:textSize="18sp"
            tools:text="9499 " />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:id="@+id/orderBtn"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_dropright"
            android:drawablePadding="10dp"
            android:enabled="false"
            android:minHeight="0dp"
            android:text="Next" />


    </LinearLayout>


</LinearLayout>
